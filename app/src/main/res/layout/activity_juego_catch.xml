<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainJuegoCatch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context="com.example.countandcatch.JuegoCatchActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="@dimen/btnHomeAncho"
            android:layout_height="@dimen/btnHomeAlto"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_azul"
            android:contentDescription="@string/home_page"
            android:padding="@dimen/btnHomePaddingInside"
            android:scaleType="centerInside"
            android:src="@drawable/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/catchTxtTimer"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="436dp"
            android:layout_marginEnd="562dp"
            android:background="@drawable/btn_azul"
            android:contentDescription="cuenta atras de cuanto tiempo de partida queda"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="01:00"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnHome"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ctachImgFondo"
            android:layout_width="1012dp"
            android:layout_height="524dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/txtResultadoAceptar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/catchTxtTimer"
            app:srcCompat="@drawable/fondo_catch" />

        <Button
            android:id="@+id/txtResultadoAceptar"
            style="@style/btn_aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="470dp"
            android:layout_marginEnd="470dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>