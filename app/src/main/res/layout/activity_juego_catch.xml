<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainJuegoCatch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context="com.example.countandcatch.JuegoCatchActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/catchLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/catchImgBtnStart"
            android:layout_width="371dp"
            android:layout_height="339dp"
            android:layout_gravity="center"
            android:layout_marginStart="600dp"
            android:layout_marginTop="216dp"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:src="@drawable/btnstart"
            app:layout_constraintStart_toStartOf="@+id/imgCatchFondo"
            app:layout_constraintTop_toTopOf="@+id/catchTxtTimer" />

        <ImageButton
            android:id="@+id/catchBtnHome"
            android:layout_width="@dimen/btnHomeAncho"
            android:layout_height="@dimen/btnHomeAlto"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="30dp"
            android:background="@drawable/btn_azul"
            android:contentDescription="@string/home_page"
            android:elevation="10dp"
            android:padding="@dimen/btnHomePaddingInside"
            android:scaleType="centerInside"
            android:src="@drawable/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/catchTxtTimer"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="443dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="522dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_azul"
            android:contentDescription="@string/cuenta_atras_de_la_partida"
            android:elevation="10dp"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="@string/_0s"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/catchBtnHome"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgCatchManzanaVida3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:visibility="invisible"
            app:layout_constraintRight_toLeftOf="@+id/imgCatchManzanaVida2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/catch_manzana" />

        <ImageView
            android:id="@+id/imgCatchManzanaVida2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:visibility="invisible"
            app:layout_constraintRight_toLeftOf="@+id/imgCatchManzanaVida1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/catch_manzana" />

        <ImageView
            android:id="@+id/imgCatchManzanaVida1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/catch_manzana" />

        <ImageView
            android:id="@+id/imgCatchFondo"
            android:layout_width="1790dp"
            android:layout_height="1205dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.314"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/catchTxtTimer"
            app:layout_constraintVertical_bias="0.608"
            app:srcCompat="@drawable/catch_fondo" />

        <ImageView
            android:id="@+id/imgCatchCesta"
            android:layout_width="182dp"
            android:layout_height="118dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/catch_cesta" />

        <ImageView
            android:id="@+id/imgCatchManzana"
            android:layout_width="97dp"
            android:layout_height="99dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/catch_manzana" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>