<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainJuegoCount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/btnHomePaddingOutside">

        <ImageButton
            android:layout_width="@dimen/btnHomeAncho"
            android:layout_height="@dimen/btnHomeAlto"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:padding="@dimen/btnHomePaddingInside"
            android:background="@drawable/btn_azul"
            android:contentDescription="@string/HomePage"
            />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="@dimen/txtTimerAncho"
            android:layout_height="@dimen/btnHomeAlto"
            android:text="00:00"
            android:textSize="@dimen/txtTimerText"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_azul"/>


    </LinearLayout>


</LinearLayout>