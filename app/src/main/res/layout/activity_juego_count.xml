<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainJuegoCount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/btnHomePaddingOutside">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="@dimen/btnHomeAncho"
            android:layout_height="@dimen/btnHomeAlto"
            android:src="@drawable/home"
            android:scaleType="centerInside"
            android:padding="@dimen/btnHomePaddingInside"
            android:background="@drawable/btn_azul"
            android:contentDescription="@string/home_page"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="@dimen/txtTimerAncho"
            android:layout_height="@dimen/btnHomeAlto"
            android:text="00:00"
            android:textSize="@dimen/txtTimerText"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_azul"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/contentLayoutJuegoCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvJuegoCountLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false" />

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvJuegoCountRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
