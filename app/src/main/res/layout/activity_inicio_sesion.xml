<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical"
    android:padding="@dimen/btnHomePaddingInside">



    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="@dimen/btnHomeAncho"
        android:layout_height="@dimen/btnHomeAlto"
        android:src="@drawable/home"
        android:scaleType="centerInside"
        android:padding="@dimen/btnHomePaddingInside"
        android:background="@drawable/btn_azul"
        android:contentDescription="@string/home_page"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="@dimen/EscribetunombreWidth"
        android:layout_height="@dimen/Escribetunombre"
        android:paddingVertical="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_azul"
        android:text="ESCRIBE TU NOMBRE"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textAlignment="center"

        android:layout_gravity="center" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="@dimen/EscribetunombreWidth"
        android:layout_height="150dp"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectangle"
        android:hint="Tu nombre"
        android:padding="20dp"
        android:textSize="50sp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="@dimen/btnContinua"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="35dp"
        android:paddingVertical="15dp"
        android:backgroundTint="@color/blue_main"
        android:text="CONTINUA"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_gravity="center"
       />


</LinearLayout>