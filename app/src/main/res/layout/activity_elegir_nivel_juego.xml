<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="#FDFCD1">

    <!-- Texto "Elegir nivel" -->

    <!-- Layout de botones de dificultad -->

    <!-- Botón Continuar -->

    <TextView
        android:id="@+id/tvElegirNivel"
        android:layout_width="305dp"
        android:layout_height="232dp"
        android:layout_marginBottom="20dp"
        android:text="Elegir nivel"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="100dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="578dp"
        android:layout_height="172dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvElegirNivel">

        <Button
            android:id="@+id/btnJcFacil"
            android:layout_width="176dp"
            android:layout_height="84dp"
            android:layout_margin="10dp"
            android:backgroundTint="#62F76E"
            android:text="FÁCIL" />

        <Button
            android:id="@+id/btnJcIntermedio"
            android:layout_width="177dp"
            android:layout_height="84dp"
            android:layout_margin="10dp"
            android:backgroundTint="#7179FD"
            android:text="INTERMEDIO" />

        <Button
            android:id="@+id/btnJcDificil"
            android:layout_width="161dp"
            android:layout_height="87dp"
            android:layout_margin="10dp"
            android:backgroundTint="#F76161"
            android:text="DIFÍCIL" />
    </LinearLayout>

    <Button
        android:id="@+id/btnJcContinuar"
        android:layout_width="299dp"
        android:layout_height="90dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#4AA8FF"
        android:text="CONTINUA"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonsLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>
